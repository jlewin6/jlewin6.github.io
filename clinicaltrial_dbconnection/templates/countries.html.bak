<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- Bootstrap CSS -->
	<link href="{{url_for('static', filename='bootstrap.min.css')}}" rel="stylesheet">
	<title>Clinical Trial Mapper</title>
	<style>
	html {
		font-size: 14px;
		font-weight: 400;
		line-height: 1.5;
	}
	</style>
	<link href="{{url_for('static', filename='bootstrap.min.css')}}" rel="stylesheet">	
	<script src="{{url_for('static', filename='jquery-3.3.1.slim.min.js')}}"></script>
	<script src="{{url_for('static', filename='socket.io.js')}}"></script>
	<script src="{{url_for('static', filename='d3.v5.min.js')}}"></script>
	<script src="{{url_for('static', filename='d3-tip.min.js')}}"></script>
	<script src="{{url_for('static', filename='d3-legend.min.js')}}"></script>
	<script src="{{url_for('static', filename='d3-geo-projection.v2.min.js')}}"></script>
	<script src="{{url_for('static', filename='topojson.v2.min.js')}}"></script>
	<script src="{{url_for('static', filename='popper.min.js')}}"></script>
	<script src="{{url_for('static', filename='world_map.js')}}"></script>
	<script type="text/javascript" charset="utf-8">
		$(document).ready(function () {
			var socket = io();
			let divElement = document.getElementById('choroplethDiv');
			createMap({{data["countries"] | tojson}}, divElement, socket);
		});
		
	</script>
</head>
<body>
	{% include 'navbar.html' %}
	<div class="container">		
		<div id="choroplethDiv"></div>
		<div>
			<label id="countryName" style="margin-top:10px;margin-bottom:15px;font-weight:600"></label></br>
			<div style="display: grid;grid-template-columns: 1fr 1fr 1fr;grid-gap: 35px;">
				<div>
					<table id="genderData" class="table"></table>
				</div>
				<div>
					<table id="studyTypeData" class="table"></table>
				</div>
				<div>
					<table id="outcomeTypeData" class="table"></table>
				</div>

			</div>
		</div>
	</div>
</body>
</html>